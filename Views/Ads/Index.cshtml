@model List<Vehicle>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>İlanlarım</h2>
        <a href="/Ads/Create" class="btn btn-primary">+ Yeni İlan Ver</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">Henüz hiç ilan vermediniz.</div>
    }
    else
    {
        <table class="table table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Resim</th>
                    <th>Başlık</th>
                    <th>Model</th>
                    <th>Fiyat</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.imageUrl" width="80" class="rounded" /></td>
                        <td>@item.Title</td>
                        <td>@item.model</td>
                        <td>@item.price.ToString("N0") ₺</td>
                        <td>@item.announcementDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            <a href="/Vehicle/Details/@item.vehicleId" class="btn btn-sm btn-info text-white">Görüntüle</a>
                            <a href="/Ads/Edit/@item.vehicleId" class="btn btn-sm btn-warning text-white">Düzenle</a>
                            <a href="/Ads/Delete/@item.vehicleId" class="btn btn-sm btn-danger" onclick="return confirm('Bu ilanı silmek istediğinize emin misiniz?');">Sil</a>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>