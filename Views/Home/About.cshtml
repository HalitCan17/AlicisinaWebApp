<style>
    .ls-2 { letter-spacing: 2px; }
    
    /* Kartların üzerine gelince yukarı zıplama efekti */
    .hover-top { transition: transform 0.3s; }
    .hover-top:hover { transform: translateY(-10px); }

    /* Hero resminin hafif oynaması */
    .animate-img { animation: float 3s ease-in-out infinite; }

    @@keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-15px); }
        100% { transform: translateY(0px); }
    }
</style>