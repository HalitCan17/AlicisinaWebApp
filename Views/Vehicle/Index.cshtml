@model List<Vehicle>

<div class="card shadow-sm border-0 rounded-3 mt-4">
  <div class="card-body p-0"></div>
  <table class="table table-hover align-middle mb-0">
    <thead class="bg-light text-muted">
      <tr>
        <th scope="col" class="ps-4" style="width: 150px;">Resim</th>
        <th scope="col">İlan Başlığı & Model</th>
        <th scope="col">İlan Tarihi</th>
        <th scope="col" class="text-end pe-4">Fiyat</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var prd in Model)
      {
        <tr style="cursor: pointer;">
          <td class="ps-4 py-3">
            <div class="position-relative">
              <img src="@prd.imageUrl" class="rounded-border" style="width: 120px; height: 90px; object-fit: cover;"
                alt="Araç resmi">
              <span class="position-absolute top-0 start-0 badge bg-warning text-dark m-1"
                style="font-size: 0.7rem;">Fırsat</span>
            </div>
          </td>
          <td><a asp-action="Details" asp-route-id="@prd.vehicleId"
              class="text-decoration-none text-dark fw-bold fs-5 d-block">
              @prd.Title
            </a>
            <small class="text-muted">
              @if (prd.categoryId == 1)
              {
                <i class="fa fa-car">@prd.Title </i>
              }
              else
              {
                <i class="fa-solid fa-motorcycle">@prd.Title</i>
              }
            </small>
          </td>
          <td class="text-muted">@prd.announcementDate.ToString("dd MMM yyyy")</td>
          <td class="text-end pe-4">
            <h5 class="text-danger fw-bold m-0">
              @prd.price.ToString("N0") ₺
            </h5>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>